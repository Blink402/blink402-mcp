{
  "name": "@blink402/mcp-server",
  "version": "0.1.0",
  "description": "Model Context Protocol server for Blink402 with B402 token integration",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "blink402-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "blink402",
    "b402",
    "solana",
    "x402",
    "ai-agents"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@blink402/types": "workspace:*",
    "@blink402/solana": "workspace:*",
    "@blink402/config": "workspace:*",
    "zod": "^3.25.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
